{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",    
    "resolveJsonModule": true,
    
  },
  "include": ["src/**/*"],
  "exclude": [".vscode", "node_modules", "dist"]
}
